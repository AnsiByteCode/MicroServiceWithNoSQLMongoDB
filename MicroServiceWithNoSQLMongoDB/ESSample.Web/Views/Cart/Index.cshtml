@model IEnumerable<ESSample.Common.CartService.CartViewModel>

@{
    ViewBag.Title = "Shopping Cart";
    var cartTotal = 0.00;
}

<h2>Shopping Cart</h2>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-10">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Shopping Cart</h5>
                            </div>
                            <div class="col-xs-2">
                                <a href='@Url.Content("~/CustomerProducts/Index")' class="btn btn-primary btn-sm btn-block">
                                    <span class="glyphicon glyphicon-share-alt"></span> Continue shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    @{
                        if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <div class="row">
                                    <div class="col-xs-6">
                                        <h4 class="product-name"><strong>@item.Name</strong></h4><h4><small>@item.Category</small></h4>
                                        <span>@item.Description</span>
                                    </div>
                                    <div class="col-xs-6">
                                        <div class="col-xs-4 text-right">
                                            <h6><strong>@item.Price <span class="text-muted">x</span>@item.Qty</strong></h6>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <h6><strong>@{ var itemTotalPrice = item.Price * item.Qty; cartTotal += Convert.ToDouble(itemTotalPrice); } @itemTotalPrice</strong></h6>
                                        </div>
                                        <div class="col-xs-4 text-right">
                                            <button type="button" class="btn btn-link btn-xs">
                                                <span class="glyphicon glyphicon-trash"> </span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                                    }
                                                }
                                                else
                                                {
                                                    <div class="row">
                                                        <div class="col-xs-12">
                                                            No products available in cart.
                                                        </div>
                                                    </div>
                                                }
                    }
                </div>
                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-10">
                            <h4 class="text-right">Total <strong>$@cartTotal</strong></h4>
                        </div>
                        <div class="col-xs-2">
                            <button type="button" class="btn btn-success btn-block">
                                Checkout
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

